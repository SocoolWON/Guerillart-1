<%= render :partial => "/layouts/header" %>
<%= render :partial => "/layouts/header_dashboard" %>
<style>
.ui.vertical.menu.guerillart {
  margin-left: 40px;
  margin-top: 40px;
}
#show-genres {
  margin-top: 30px;
}
.ui[class*="two column"].grid>.column:not(.row), .ui[class*="two column"].grid>.row>.column {
  width: 70%;
}
#guerillart-menu {
  width: 300px;
}
</style>

<div class="ui two column grid">
  <div class="column" id="guerillart-menu">
    <div class="ui guerillart vertical menu">
      <a class="item" id="inbox-show">
        내가 본 공연
      <div class="ui label"><i>커밍쑨</i></div>
      </a>
      <a class="active teal item" id="liked-show">
        찜한 공연
        <div class="ui teal left pointing label"><%= @yourlikes.size %></div>
      </a>
      <a class="item" id="followed-artist">
        아티스트
        <div class="ui label">1</div>
      </a>
    </div>
  </div>
  <div class="column">
    <!-- 메뉴에서 선택한 페이지, 제이쿼리로 append -->

    <div class="ui guerillart special cards" id="show-genres">
    <%
      @yourlikes.each do |liked_show|
        @shows.reverse.each do |show|
          if liked_show.show_id == show.id
    %>
      <div class="card">
        <div class="blurring dimmable image">
          <div class="ui inverted dimmer">
            <div class="content">
              <div class="center">
                <%= link_to "더보기", {controller: "home", action: "view", show_id: show.id}, class: "ui primary button", target: "_blank" %>
              </div>
            </div>
          </div>
          <img class="ui fluid image" src="/images/portfolio/<%= (1..12).to_a.sample %>.jpg" />
        </div>
        <div class="content">
          <a class="header"><%= show.title %></a>
          <div class="meta">
            <% if show.creator.nil? %>
            <span class="date">장범준</span>
            <% else %>
            <span class="date"><%= show.creator.artist_name %></span>
            <% end %>
          </div>
          <div class="description">
            <%= show.location %>
          </div>
        </div>
        <div class="extra content">
            <i class="heart icon"></i>
            <%= show.likes.size %>
            <span class="right floated"><%= show.date %></span>
          </div>
        </div><!-- card -->
        <% end %>
      <% end %>
    <% end %>


  </div>
</div>
<!-- 각 공연 당, 카드 이미지 호버 -->
<script>
$('.special.cards .image').dimmer({
  on: 'hover'
});
</script>
