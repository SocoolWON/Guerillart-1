<%= render :partial => "/layouts/header_dashboard" %>

    <div class="ProfileCanopy-header u-bgUserColor">
        <div class="ProfileCanopy-headerBg">
          <img alt="" src="https://pbs.twimg.com/profile_banners/74550725/1467017138/1500x500" height="350px" width="100%" >
        </div>
  
      <div class="AppContainer">
        <div class="ProfileCanopy-avatar" style="margin-top: -60px">
          <a class="ProfileAvatar-container u-block js-tooltip profile-picture"   data-resolved-url-large="https://pbs.twimg.com/profile_images/747350188763668481/nZ_JFwxj.jpg" data-url="https://pbs.twimg.com/profile_images/747350188763668481/nZ_JFwxj.jpg" target="_blank" data-original-title="Wonder Girls">
        </div>
      </div>
    </div>

    <div class="container">
      <img src="https://pbs.twimg.com/profile_images/747350188763668481/nZ_JFwxj.jpg" alt="wondergirls" class="img-circle" width="300" height="300">
    </div>

<!-- 아티스트 프로필 -->
  <%= form_tag "mypage_edit_complete" do %>
    <div class="container" style="color: #F5F5F5">
         <div class="row" >
            <div class="col-sm-6 col-md-4">
              <div class="thumbnail">
                <div class="caption">
                  <div class="form-group">
                    <label for="exampleInputEmail1">자기소개</label>
                    <textarea class="form-control" rows="5" name="introduction"placeholder="할말"><%= @users.introduction %></textarea>
                  </div>
                  <div class="form-group">
                    <label for="exampleInputEmail1">SNS</label>
                    <input type="text" name="sns" value="<%= @users.sns %>"class="form-control" id="artistgenre" placeholder="페이스북주소?">
                  </div>
                  <div class="form-group">
                    <input type="submit" class="btn btn-primary" value="추가하기">
                    <input type="hidden" name="user_id" value="<%= @users.id %>">
                  </div>
                </div>
              </div>
            </div>
         </div>
    </div>
  <% end %>
<!-- 새 글 작성 폼시작 --> 
    <% if @users.artist_name == current_user.artist_name %>
    <div class="container" style="color: #F5F5F5">
         <div class="row">
            <div class="col-sm-6 col-md-4">
              <div class="thumbnail">
                <div class="caption">
                <h4>새 글 작성하기</h4>
                </div>
                 <%= form_tag '/dashboard/write_post' do %>
                   <textarea class="form-control" value="content" name="content"rows="3" placeholder="무슨 생각을 하고 있어요?"></textarea> 
                   <input type="submit" class="btn" value="확인">
                 <% end %>
                </div>
            </div>
         </div>
    </div>
    <% end %>



                <div class="jumbotron">
                  <div class="container">
                    <% @posts.reverse.each do |post| %>
                    <% if post.user_id == @users.id %>
                      <p><%= post.content %></p>
                       <a href="#">좋아요</a><hr>
                    <% end %>
                    <% end %>
                  </div>
                </div>
