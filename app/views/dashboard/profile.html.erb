<%= render :partial => "/layouts/header_dashboard" %>

<div class="container">
  <div class="row">
    <div class="sidebar" style="margin-bottom:0px; padding-bottom:0px; margin-right:0px;">
        <div class="area-profile">
          <div class="picture" style="background-image: url(../images/profile_default.jpg)">
            <div class="picture-overlay">
              <form method="POST" enctype="multipart/form-data" action="#" name="frmUploadProfile">
                <input type="file" name="uploadFile" onchange="frmUploadProfile.submit()">
							</form>
						</div>
					</div>
					<h1 style="margin-bottom:10px;"><%=current_user.name%></h1>
				</div>
		</div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  
    <fieldset>

  <!-- 등록된 이메일, 가입일 표시(가입일 찾아야함) -->

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group">
    <label class="col-md-4 control-label" for="textinput">등록된 이메일</label>

    <div class="col-md-4">
      <h4><%= current_user.email %></h4>
    </div>
  </div>

  <div class="form-group">
    <label class="col-md-4 control-label" for="textinput">가입일</label>

    <div class="col-md-4">
      <h4><%= current_user.last_sign_in_at %></h4>
    </div>
  </div>

  <!-- 나머지 변경 가능한 정보 -->
  <div class="field">
    <%= f.label :name %>
    <br />
    <%= f.text_field :name, placeholder: "#{current_user.name}",  autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "off" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>


  <!-- Button -->
  <div class="form-group">
    <label class="col-md-4 control-label" for="singlebutton"></label>
    <div class="col-md-4">
      <button id="singlebutton" name="singlebutton" class="btn btn-primary">수정하기</button>
    </div>
  </div>

  </fieldset>
  <% end %>
  </div>
</div>

<div class="footer text-center spacer" style="margin-bottom: 0px;">
  <p class="wowload flipInX">
    <a href="#"><i class="fa fa-facebook fa-2x"></i></a><a href="#"><i class="fa fa-instagram fa-2x"></i></a><a href="#"><i class="fa fa-twitter fa-2x"></i></a><a href="#"><i class="fa fa-flickr fa-2x"></i></a>
  </p>
  Copyright 2016 Guerillart. All rights reserved.
</div>
