<%= render :partial => "/layouts/header" %>
<%= render :partial => "/layouts/header_dashboard" %>

<style>
.ui.form .field>label{
  color: black;
}
.ui.form input:not([type]), .ui.form input[type=text], .ui.form input[type=email], .ui.form input[type=search], .ui.form input[type=password], .ui.form input[type=date], .ui.form input[type=datetime-local], .ui.form input[type=tel], .ui.form input[type=time], .ui.form input[type=file], .ui.form input[type=url], .ui.form input[type=number], .ui.form textarea {

width: 450px !important;
margin-left: auto !important;
margin-right: auto !important;

}
</style>



<div class="container">
  <h4 class="ui dividing header">[Name, Password, Photo] changable</h4>

      <%=form_for(resource, as: resource_name, url: registration_path(resource_name), html: { multipart: true, method: :put }) do |f| %>
          <div class="ui centered card">
            <div class="image">
             <% if current_user.avatar.url %>
              <img src="<%= current_user.avatar.url %>">
             <% else %>
              <img src="/images/iu.jpg">
             <% end %>
            <div class="input-field">
              <%= f.file_field :avatar%>
            </div>
            </div>
            <div class="content">
              <div class="center header">
              <i class="user icon"></i>
                <%=current_user.name%>
              </div><br>
              <div class="center header">
              <i class="mail icon"></i>
                <%=current_user.email%> 
              </div><br>
              <div class="center header">
              <i class="calendar icon"></i>
                <%= current_user.created_at%>  
              </div>
            </div>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          <div class="ui form" style="margin-left :9cm">
              <div class="required twelve field">
                <label>이름</label>
                <%= f.text_field :name, placeholder: "#{current_user.name}",  autofocus: true %>
              </div>
              <div class="field required">
                <label>현재비밀번호</label>
                  <%= f.password_field :current_password, autocomplete: "off", required: "true" %>
              </div>
              <div class="field">
                <label>새로운비밀번호</label>
                  <%= f.password_field :password, autocomplete: "off" %>
                  <% if @minimum_password_length %>
                    <br />
                    <em><%= @minimum_password_length %> characters minimum</em>
                  <% end %>
              </div>
              <div class="field">
                <label>새비번다시입력</label>
                 <%= f.password_field :password_confirmation, autocomplete: "off" %>
              </div>
            <button class="ui submit button" type="submit" name="commit"> 변경
            </button>
          </div>
      <% end %>  
</div>
