<p><%= flash[:alert] %></p>
<%= render :partial => "/layouts/header_dashboard" %>



<div class="form-group" style="margin: 0cm 6cm 0cm 6cm;">
<h2>공연정보등록</h2>

  <%= form_tag "write_complete" do %>
    <div class="form-group">
      <label for="inputName" class="control-label">제목</label>
      <input type="text" name="show_title"class="form-control" id="1inputName" placeholder="멋진 공연 주제를 입력해주세요" required>
    </div>
    <div class="form-group">
      <label for="2inputName" class="control-label">시간</label>
      <input type="text" name="time"class="form-control" id="5inputName" placeholder="공연 날짜와 시간을 선택주세요" required>
    </div>
    <div class="form-group">
      <label for="3inputName" class="control-label">플레이리스트</label>
      <input type="text" name="playlist"class="form-control" id="6inputName" placeholder="멋진 공연 주제를 입력해주세요" required>
    </div>
    <div class="form-group">
      <label for="comment">자기소개</label>
      <textarea class="form-control" name="show_content"rows="5" id="comment"></textarea>
    </div>
    <div class="form-group">
      <label for="inputName" class="control-label" >장르</label>
      <div class="checkbox">
        <label>
          <input type="checkbox" name="genre[]"value="Rock" >
          Rock
        </label>
        <label>
          <input type="checkbox" name="genre[]"value="Electro" >
          Electro
        </label>
        <label>
          <input type="checkbox" name="genre[]"value="Pop" >
          Pop
        </label>
        <label>
          <input type="checkbox" name="genre[]"value="R&B" >
          R&B
        </label>
        <label>
          <input type="checkbox" name="genre[]"value="Metal" >
          Metal
        </label>
        <label>
          <input type="checkbox" name="genre[]"value="Jazz" >
          Jazz
        </label>
        <label>
          <input type="checkbox" name="genre[]"value="Latino" >
          Latino
        </label>
      </div>
    </div>
    <div class="form-group">
      <label for="inputName" class="control-label">장소</label>
      <input type="text" class="form-control" name="location" placeholder="공연장소를 선택주세요" required>
    </div>


    <div class="form-group">
      <input type="submit" class="btn btn-primary" value="추가하기">
    </div>
  <% end %>
</div>
