<%= render :partial => "/layouts/header_dashboard" %>

<div class="container">
<form class="form-horizontal">
<fieldset>

<!-- Form Name -->
<legend>계정 관리</legend>

<!-- Multiple Radios (inline) -->

<!-- 등록된 이메일, 가입일 표시(가입일 찾아야함) -->
<div class="form-group">
  <label class="col-md-4 control-label" for="textinput">등록된 이메일</label>
  <div class="col-md-1">

  </div>
  <div class="col-md-4">
    <h4><%= current_user.email %></h4>
  </div>
</div>

<div class="form-group">
  <label class="col-md-4 control-label" for="textinput">가입일</label>
  <div class="col-md-1">

  </div>
  <div class="col-md-4">
    <h4><%= current_user.current_sign_in_at %></h4>
  </div>
</div>

<!-- 나머지 변경 가능한 정보 -->
<div class="form-group">
  <label class="col-md-4 control-label" for="textinput">이름</label>
  <div class="col-md-4">
  <input id="textinput" name="textinput" type="text" placeholder="<%= current_user.name %>" class="form-control input-md">

  </div>
</div>

<div class="form-group">
  <label class="col-md-4 control-label" for="textinput">현재 비밀번호</label>
  <div class="col-md-4">
  <input id="textinput" name="textinput" type="password" placeholder="현재 비밀번호를 입력하세요." class="form-control input-md">

  </div>
</div>

<div class="form-group">
  <label class="col-md-4 control-label" for="textinput">새 비밀번호</label>
  <div class="col-md-4">
  <input id="textinput" name="textinput" type="password" placeholder="새 비밀번호를 입력하세요." class="form-control input-md">

  </div>
</div>

<div class="form-group">
  <label class="col-md-4 control-label" for="textinput">새 비밀번호 확인</label>
  <div class="col-md-4">
  <input id="textinput" name="textinput" type="password" placeholder="새 비밀번호를 한번 더 입력하세요." class="form-control input-md">

  </div>
</div>

<div class="form-group">
  <label class="col-md-4 control-label" for="textinput">연락처</label>
  <div class="col-md-4">
  <input id="textinput" name="textinput" type="text" placeholder="" class="form-control input-md">

  </div>
</div>

<!-- File Button -->
<!--
<div class="form-group">
  <label class="col-md-4 control-label" for="filebutton">photo</label>
  <div class="col-md-4">
    <input id="filebutton" name="filebutton" class="input-file" type="file">
  </div>
</div> -->


<!-- Button -->
<div class="form-group">
  <label class="col-md-4 control-label" for="singlebutton"></label>
  <div class="col-md-4">
    <button id="singlebutton" name="singlebutton" class="btn btn-primary">수정하기</button>
  </div>
</div>

</fieldset>
</form>

</div>


<!-- 아티스트 등록 페이지 -->
<div class="container">
<h2>아티스트 신청서</h2>
<%= form_tag 'create' do %> 
  <div class="form-group">
    <label for="exampleInputEmail1">아티스트명</label>
    <input type="text" name="name"class="form-control" id="artistname" placeholder="아티스트명은 변경할 수 없습니다" required>
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">장르</label>
    <input type="text" name="genre"class="form-control" id="artistgenre" placeholder="주로 하는 장르를 입력해주세요"required>
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">전화번호</label>
    <input type="text" name="phone_number"class="form-control" id="artistgenre" placeholder="전화번호를 입력해주세요"required>
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">주활동지역</label>
    <input type="text" name="area"class="form-control" id="artistgenre" placeholder="주로 플레이하는 지역이 어디인가요?" required>
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">SNS</label>
    <input type="text" name="sns"class="form-control" id="artistgenre" placeholder="페이스북주소?">
  </div>
  <div class="form-group">
    <label for="exampleInputEmail1">자기소개</label>
    <textarea class="form-control" rows="5" name="introduction"placeholder="할말"></textarea>
  </div>
  
    <div class="form-group">
      <input type="submit" class="btn btn-primary" value="추가하기">
    </div>
<% end %>
</div>
