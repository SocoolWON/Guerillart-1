<div class="container" style="margin-top: 4cm">
  <div class="row">
       <% user = User.all %>
         <% user.each do |user| %>
          <div class="col-md-3">
            <div class="profile-sidebar">
                <div class="profile-userpic">
                  <img src="/images/profile_default.jpg" class="img-responsive" alt="">
                </div>
                <div class="profile-usertitle">
                  <div class="profile-usertitle-name">
                    <%= user.artist_name %>
                    <form action="/mypage/<%= user.artist_name %>" method="get"><input type="hidden" name='artist_name' value="<%= user.artist_name %>"><input type="submit" value="[페이지가기]">
</form>
                  </div>
                </div>
            </div>
          </div>
        <% end%>
  </div>
</div>
