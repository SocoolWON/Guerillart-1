<%= render :partial => "/layouts/header.html.erb"%>

<div class="container" style="margin-top: 4cm">
  <div class="row">
       <% user = User.all %>
         <% user.each do |user| %>
          <% if user.artist_name.present? %>
            <div class="col-md-3">
                <div class="profile-sidebar">
                    <div class="profile-userpic">
                        <img src="/images/profile_default.jpg" class="img-responsive" alt="">
                    </div>
                    <div class="profile-usertitle">
                      <div class="profile-usertitle-name">
                        <%= user.artist_name %>
                        <%= link_to "페이지가기", controller: "dashboard", action:"mypage", artist_name: user.artist_name %>
                      </div>
                    </div>
                </div>
            </div>
          <% end %>
        <% end%>
  </div>
</div>
