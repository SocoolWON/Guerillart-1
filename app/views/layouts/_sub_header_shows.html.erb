<style>
.ui.subshow.menu {
  margin-top: -15px;
  background: #FAFAFA;
  border-radius: 0;
  border:none;
}
/* dropdown */
.ui.button {
  background: transparent;
}
.ui.sub.dropdown>.text {
  font-weight: bold;
  color: rgba(0, 0, 0, 0.8);
}
div.ui.button.sub.dropdown {
  text-align: center;
}
/* 전체 가운데 정렬 */
.ui.button.sub.dropdown.genre, .ui.button.sub.dropdown.show {
  margin : 0 auto;
}
.ui.subshow.container {
  width: 300px;
}
</style>
<div class="ui subshow menu">
  <div class="ui subshow container">

    <div class="ui button sub genre dropdown genre">
      <% if @current_genre.nil? %>
      <div class="text">장르별</div>
      <% else %>
      <div class="text"><%= @current_genre %></div>
      <% end %>
      <i class="dropdown icon"></i>
      <div class="ui simple dropdown menu">
        <div class="ui item"><%= link_to "모아보기", choose: "모아보기" %></div>
        <% @names.each do |name| %>
          <div class="ui item show-genre-item">
          </div>
        <% end %>
      </div>
    </div>
    <!-- 공연 -->
    <div class="ui button sub show dropdown show">
      <% if @select_show.nil? %>
      <div class="text">공연</div>
      <% else %>
      <div class="text"><%= @select_show %></div>
      <% end %>
      <i class="dropdown icon"></i>
      <div class="ui simple dropdown menu">
        <div class="ui item">
          <%= link_to "실시간 공연", controller: "shows", action: "index", select_show: "실시간 공연" %>
        </div>
        <div class="ui item">
          <%= link_to "다가오는 공연", controller: "shows", action: "index", select_show: "다가오는 공연" %>
        </div>
      </div>
    </div>

  </div>
</div>
<script>
$('.show.dropdown')
  .dropdown();
;
$('.genre.dropdown')
  .dropdown();
;
</script>
