   

<!-- Start of Signin modal -->
    <div class="ui modal" id="signin-modal">
      <i class="close icon"></i>
      <div class="header">
        로그인 
      </div>

      <%= simple_form_for(:user, :url => session_path(resource_name)) do |f| %>
        <div class="description">
          <div class="ui form ">
            <div class="field">
              <label>E-mail</label>
              <input type="email" name="email" placeholder="이메일을 입력해주세요">
            </div>
            <div class="field">
              <label>Password</label>
                <div class="field">
                  <input type="password" name="password" placeholder="비밀번호를 입력해주세요", autocomplete= "off">
                </div>
            </div>
          </div>
        </div>

        <div class="actions">
          <div class="ui black deny button">
            취소 
          </div>
          <button class="ui positive right primary button" type="submit">
            확인 
          </button>
        </div>
     <% end %>
  </div>



<!-- Start of Signup modal -->
    <div class="ui modal " id="signup-modal">
      <i class="close icon"></i>
      <div class="header">
        회원가입
      </div>

      <%= simple_form_for(:user, :url => registration_path(resource_name)) do  %>
        <div class="description">
          <div class="ui form ">
            <div class="field">
              <label>E-mail</label>
              <input type="email" name="email" placeholder="이메일을 입력해주세요">
            </div>
            <div class="field">
              <label>Name</label>
              <input type="text" name="name" placeholder="이름 석자를 입력해주세요">
            </div>
            <div class="field">
              <label>Password</label>
                <div class="field">
                  <input type="password" name="encrypted_password" placeholder="비밀번호를 입력해주세요", autocomplete= "off">
                </div>
            </div>
            <div class="field">
              <label>Password again</label>
                <div class="field">
                  <input type="password" name="password_confirmation" placeholder="비밀번호를 확인합니다", autocomplete="off">
                </div>
           </div>
         </div>
       </div>

        <div class="actions">
          <div class="ui black deny button">
            취소 
          </div>
          <button class="ui positive right primary button" type="submit">
            확인 
          </button>
        </div>
     <% end %>
  </div>

    <div class="ui secondary menu " > <!--Navbar start-->
        <a class="item" href="/">GUERILLART</a>
        <div class="item">
          <div class="ui icon input">
            <%= form_tag("/artist/search", method: "get") do %>
              <div class="ui icon input">
                <input class="prompt"type="text"  placeholder="당신 주위를 검색해보세요"name="artist_name" />
                <i class="search link icon"></i>
              </div>
            <% end %>
          </div>
        </div>

        <div class="right menu"> <!-- 오른쪽 Navbar -->
           <a class="ui item" href="/shows">공연</a>
           <a class="ui item" href="/artists">아티스트</a>

           <%if user_signed_in?%>
             <div class="ui right dropdown item">
                <div class="ui simple dropdown">
                    <div class="text"> <%= current_user.name%>님 </div>
                  <i class="dropdown icon"></i>
                  <div class="menu">
                    <a class="ui item" href="/shows">대쉬보드</a>
                    <a class="ui item" href="/dashboard/guerillart">나의게릴라트</a>
                    <a class="ui item" href="/dashboard/profile">계정관리</a>

                    <% if current_user.artist_name? %>
                    <% artist_name = current_user.artist_name %>
                    <a class="ui item" href="/dashboard/write">공연등록</a>
                    <li class="dropdown">
                    <%= link_to "#{artist_name} 페이지", controller: "dashboard", action:"mypage", artist_name: artist_name %>
                    </li>
                    <a class="ui item" href="/users/sign_out" data-method="delete">로그아웃</a>
                    <% end %>
                  </div>
                </div>
             </div>
           <% else%>

           <a class="ui item start_signup_modal">회원가입</a>
           <a class="ui item start_signin_modal">로그인</a>
           <% end %>
        </div> <!-- 오른쪽 Navbar 끝 -->
    </div>  <!-- Navbar 끝 -->

<script>
$(function() {
  $('.start_signin_modal').click(function(){

    $('#signin-modal').modal('show');
  

  });
});
</script>

<script>
$(function() {
  $('.start_signup_modal').click(function(){

    $('#signup-modal').modal('show'); 

  });
});
</script>



