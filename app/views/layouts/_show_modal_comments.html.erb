<style>
.show-comment-window {
  float: left;
}
.btn-show-comment {
  float:left;
}
.media-object {
  margin-right: 20px;
}
</style>
<div class="modal-footer" style="text-align:left; margin-top:30px">
  <% unless current_user.nil?  #로그인을 한 유저에게는 댓글창이 보인다 %>
  <div class="wrap-comment-user">
    <div class="show-comment-window">
      <div class="col-lg-10">
        <a class="pull-left" href="#">
          <img class="media-object dp img-circle" src="https://ssl.gstatic.com/accounts/ui/avatar_2x.png" style="width:70px; height:70px;">
        </a>
        <div class="media-body">
          <h4 class="media-heading"><%= current_user.name %>
            <small>Software Developer at <a href="#">Gridle.in</a></small>
          </h4>
          <input class="form-control" type="text" name="content" id="comment_content_<%=@show.id%>" placeholder="댓글 내용을 입력하세요">
        </div>
      </div>
      <div class="btn-show-comment">
        <button value="<%= @show.id %>"type="submit" class="btn btn-default btn-lg reply_submit" value="확인">
          <span class="glyphicon glyphicon-send" aria-hidden="true" ></span>
        </button>
      </div>
    </div>
  </div>
  <% end %>
  <div class="row com-size">
<hr>
    <div class="col-sm-12">
      <h3>
        Comments <span style="color: orange; font-weight:bold"><%= @show.comments.size %></span>
        <small style="text-align: right;"></small>
      </h3>
      <% unless @show.comments.nil? %>
        <% @show.comments.each do |comment| %>
          <div class="container" id="comments" style="max-width:900px">
            <div style="max-width:700px">
              <a class="pull-left" href="#">
                <img class="media-object dp img-circle" src="https://ssl.gstatic.com/accounts/ui/avatar_2x.png" style="width:50px; height:50px;">
              </a>
              <div class="media-body" style="max-width:700px">
                <h4 class="media-heading"><%= comment.user.name %>
                  <small><%= comment.created_at.in_time_zone("Asia/Seoul").strftime("%Y년%m월%d일 %H시%M분%S초") %></small>
                  <br>
                  <small style="color:black"><%= comment.content %></small>
                </h4>
              </div>
            </div>
          </div>
          <hr>
        <% end %>
      <% end %>
        <!-- Ajax보여지는 곳 -->
          <div class="container" id="comments" style="max-width:900px">
            <div style="max-width:700px">
              <a class="pull-left" href="#">
                <img class="media-object dp img-circle">
              </a>
              <div class="googol_<%=@show.id%> media-object dp img-circle"></div> 
              <div class="media-body reply_<%=@show.id%>" style="max-width:700px"></div>
            </div>
          </div>
          <hr>
        <!-- Ajax 사라지는 곳 -->
    </div>
  </div>

</div>

