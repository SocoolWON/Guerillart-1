<!DOCTYPE html>
<html>
<head>
  <title>Guerillart</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
     <!-- Modal -->
<div class="modal fade" id="myModal" role="dialog">
	<div class="modal-dialog">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h3>Sign In</h3>
  </div>
  <div class="modal-body">
<%= simple_form_for(:user, :url => session_path(resource_name)) do |f| %>
          <div class="inputs">
          	<%unless user_signed_in?%>
          		<%="hi"%>
          	<%end%>
	  	<div class="field">
	    	<%= f.label :email %><br />
	    	<%= f.email_field :email, autofocus: true %>
	  	</div>
	  	<div class="field">
	    <%= f.label :password %><br />
	    <%= f.password_field :password, autocomplete: "off" %>
	  </div>
	
	  <% if devise_mapping.rememberable? -%>
	    <div class="field">
	      <%= f.check_box :remember_me %>
	      <%= f.label :remember_me %>
	    </div>
	  <% end -%>
	
	  <div class="actions">
	    <%= f.submit "Log in" %>
	  </div>
          </div>
  </div>
    <div class="modal-footer">
        <%= f.button :submit, "Log in", :class => 'btn btn-primary', :data => { :dismiss => "modal"} %>
        <% end %>
        <%= render "devise/shared/links" %>
    </div>
    </div>
</div>

<!-- Header Starts -->
<div class="navbar-wrapper">
      <div class="container">

        <div class="navbar navbar-inverse navbar-fixed-top" role="navigation" id="top-nav">
          <div class="container">
            <div class="navbar-header">


              <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>

            </div>
            <!-- Nav Starts -->
            <div class="navbar-collapse  collapse">
              <ul class="nav navbar-nav navbar-right scroll">
                 <li class="active"><a href="#home">공연</a></li>
                 <li ><a href="#about">아티스트</a></li>
                 <li ><a class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">회원가입 </a></li>
                 <li ><a href="#partners">로그인</a></li>
              </ul>

<!-- 회원가입시작 --!>
<!-- 회원가입 끝--!>
            </div>
            <!-- #Nav Ends -->



          </div>
        </div>

      </div>
    </div>

