<%= render :partial => "/layouts/headers/header" %>

<div class="ProfileCanopy-header u-bgUserColor">
    <div class="ProfileCanopy-headerBg">
    <% if @users.image.url.nil? %>
      <img alt="" src="https://pbs.twimg.com/profile_banners/74550725/1467017138/1500x500" height="350px" width="100%" >
    <% else %>
      <img alt="" src="<%= @users.image.url%>" height="350px" width="100%" >
    <% end %>
    </div>

  <div class="AppContainer">
    <div class="ProfileCanopy-avatar">
      <a class="ProfileAvatar-container u-block js-tooltip profile-picture" data-resolved-url-large="https://pbs.twimg.com/profile_images/747350188763668481/nZ_JFwxj.jpg" data-url="https://pbs.twimg.com/profile_images/747350188763668481/nZ_JFwxj.jpg" target="_blank"
       data-original-title="<%= @users.artist_name %>-title">
    </div>
  </div>
</div>

<div class="ui container">
  <img src="https://pbs.twimg.com/profile_images/747350188763668481/nZ_JFwxj.jpg"
  alt="<%= @users.artist_name %>" class="img-circle"
  width="300" height="300">
  <!-- TODO : 부트스르탭 버리고
    시멘틱유아이로 넘어왔는데 부트스트랩 class를 쓴 흔적이 존재한다
    시멘틱유아이로 바꿔주자
  -->
  <%= form_tag "update", method: :put, multipart: true  do %>
   <div class="thumbnail">
    <div class="caption">
      <div class="form-group">
        <label for="exampleInputEmail1">자기소개</label>
        <textarea class="form-control" rows="5" name="introduction"placeholder="할말">
          <%= @users.introduction %>
        </textarea>
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">SNS</label>
        <input type="text" name="sns" value="<%= @users.sns %>"class="form-control"
         id="artistgenre" placeholder="페이스북주소?">
      </div>
      <div class="input-field">
        <%= file_field_tag :image %>
      </div>
      <div class="form-group">
        <input type="submit" class="btn btn-primary" value="추가하기">
        <input type="hidden" name="user_id" value="<%= @users.id %>">
      </div>
    </div>
  </div>
  <% end %>
</div>
